<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
  <specVersion>
    <major>1</major>
    <minor>0</minor>
  </specVersion>
  <serviceStateTable>
    <stateVariable>
      <name>InfluxDbUrl</name>
      <sendEventsAttribute>no</sendEventsAttribute>
      <dataType>string</dataType>
      <defaultValue>http://ip:port</defaultValue>
    </stateVariable>
    <stateVariable>
      <name>InfluxDbDatabase</name>
      <sendEventsAttribute>no</sendEventsAttribute>
      <dataType>string</dataType>
      <defaultValue>vera</defaultValue>
    </stateVariable>
  </serviceStateTable>
  <actionList>
    <action>
      <name>SetInfluxDbUrl</name>
      <argumentList>
        <argument>
          <name>newInfluxDbUrl</name>
          <direction>in</direction>
		  <relatedStateVariable>InfluxDbUrl</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
    <action>
      <name>SetInfluxDbDatabase</name>
      <argumentList>
        <argument>
          <name>newInfluxDbDatabase</name>
          <direction>in</direction>
		  <relatedStateVariable>InfluxDbDatabase</relatedStateVariable>
        </argument>
      </argumentList>
    </action>
  </actionList>
</scpd>